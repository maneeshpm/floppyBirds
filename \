package main

import (
	"fmt"

	"github.com/veandco/go-sdl2/img"
	"github.com/veandco/go-sdl2/sdl"
)

var frame = [...]string{
	"res/imgs/frame-1.png",
	"res/imgs/frame-2.png",
	"res/imgs/frame-3.png",
	"res/imgs/frame-4.png",
}

type scene struct {
	bg   *sdl.Texture
	bird *sdl.Texture
}

func newScene(ren *sdl.Renderer) (*scene, error) {
	bg, err := img.LoadTexture(ren, bgPath)
	if err != nil {
		return nil, fmt.Errorf("Could not create background texture: %v", err)
	}

	bird, err := img.LoadTexture(ren, frame[0])
	if err != nil {
		return nil, fmt.Errorf("Could not create background texture: %v", err)
	}
	return &scene{bg: bg, bird: bird}, nil
}

func (s *scene) paint(ren *sdl.Renderer) error {
	ren.Clear()

	if err := ren.Copy(s.bg, nil, nil); err != nil {
		return fmt.Errorf("Could not copy texture: %v", err)
	}

	rect := &sdl.Rect{W: 50, H: 43, X: 10, Y: winHeight - 43/2}

	if err := ren.Copy(s.bird, nil, rect); err != nil {
		return fmt.Errorf("Could not copy texture: %v", err)
	}

	ren.Present()
	return nil
}

func (s *scene) Destroy() {
	s.bg.Destroy()
	s.bird.Destroy()
}
